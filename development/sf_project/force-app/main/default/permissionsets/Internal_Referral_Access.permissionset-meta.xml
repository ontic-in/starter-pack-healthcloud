<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Internal Referral Access</label>
    <description>Provides access to create and manage internal patient referrals via ClinicalServiceRequest. Grants Create/Read/Edit on referrals, Read on providers and patient records, and access to Referral Apex classes.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <license>Salesforce</license>

    <!-- ClinicalServiceRequest custom fields -->
    <fieldPermissions>
        <field>ClinicalServiceRequest.Referral_Reason__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>ClinicalServiceRequest.Referral_Notes__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>ClinicalServiceRequest.Referred_To_Provider__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>ClinicalServiceRequest.Specialty_Requested__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Object Permissions: ClinicalServiceRequest (no delete) -->
    <objectPermissions>
        <object>ClinicalServiceRequest</object>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Object Permissions: HealthcareProvider (read-only for provider selection) -->
    <objectPermissions>
        <object>HealthcareProvider</object>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Object Permissions: Account (read-only for patient and facility access) -->
    <objectPermissions>
        <object>Account</object>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Object Permissions: Contact (read-only for practitioner traversal) -->
    <objectPermissions>
        <object>Contact</object>
        <allowCreate>false</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>false</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>ReferralController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ReferralService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
</PermissionSet>
