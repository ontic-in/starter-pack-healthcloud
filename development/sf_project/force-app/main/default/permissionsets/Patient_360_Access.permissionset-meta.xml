        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Account.Emergency_Contact_Relationship__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Custom Field on MemberPlan -->
    <fieldPermissions>
        <field>MemberPlan.Medisave_Balance__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Object Permissions: Contact (required for Person Account) -->
