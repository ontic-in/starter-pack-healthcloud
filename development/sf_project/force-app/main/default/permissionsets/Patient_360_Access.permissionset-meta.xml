<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Patient 360 Access</label>
    <description>Provides access to Patient 360 custom fields for patient demographics and insurance. Grants CRUD on core Health Cloud objects for conditions, medications, allergies, and coverage.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <license>Salesforce</license>

    <!-- Custom Fields on Account (PersonAccount) -->
    <fieldPermissions>
        <field>Account.NRIC__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Account.Ethnicity__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Account.Emergency_Contact_Name__c</field>
